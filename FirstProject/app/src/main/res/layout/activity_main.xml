<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="30dp"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:gravity="right">

        <TextView
            android:id="@+id/susic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:gravity="right"></TextView>

        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:layout_below="@+id/susic"
            android:gravity="right"></TextView>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Decimal"
                android:onClick="clickRadio"></RadioButton>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Heximal"
                android:layout_marginLeft="70dp"
                android:onClick="clickRadio"></RadioButton>
        </RadioGroup>

    </LinearLayout>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TableRow>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:text="("
                android:onClick="clickNum"></Button>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:text=")"
                android:onClick="clickNum"></Button>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:text="â†"
                android:layout_span="2"
                android:onClick="clickOper"></Button>
        </TableRow>
        <TableRow>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:text="1"
                android:onClick="clickNum"></Button>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:text="2"
                android:onClick="clickNum"></Button>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:text="3"
                android:onClick="clickNum"></Button>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:text="+"
                android:onClick="clickNum"></Button>
        </TableRow>
        <TableRow>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:text="4"
                android:onClick="clickNum"></Button>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:text="5"
                android:onClick="clickNum"></Button>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:text="6"
                android:onClick="clickNum"></Button>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:text="-"
                android:onClick="clickNum"></Button>
        </TableRow>
        <TableRow>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:text="7"
                android:onClick="clickNum"></Button>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:text="8"
                android:onClick="clickNum"></Button>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:text="9"
                android:onClick="clickNum"></Button>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:text="X"
                android:onClick="clickNum"></Button>
        </TableRow>
        <TableRow>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:text="0"
                android:onClick="clickNum"></Button>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:text="."
                android:onClick="clickNum"></Button>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:text="="
                android:onClick="clickOper"></Button>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:text="/"
                android:onClick="clickNum"></Button>
        </TableRow>

    </TableLayout>


</LinearLayout>